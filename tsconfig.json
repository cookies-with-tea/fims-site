{
  "module": "esnext",
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./build",
    "target": "esnext",
    "module": "esnext",
    "newLine": "lf",
    "jsx": "preserve",
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@utils/*": ["./src/utils/*"],
      "@pages/*": ["./src/pages/*"],
      "@scss/*": ["./src/scss/*"],
      "@ui/*": ["./src/ui/*"],
      "@providers/*": ["./src/providers/*"],
      "@components/*": ["./src/components/*"],
    },
    "rootDirs": [
      "./*"
    ],
    "typeRoots": [
      "./types",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },

  "exclude": ["node_modules"]
}
